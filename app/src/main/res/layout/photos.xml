<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="483dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/lv_iv_photo"
        android:layout_width="399dp"
        android:layout_height="299dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/lv_btn_share"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:text="@string/share"
        app:layout_constraintBottom_toBottomOf="@+id/lv_btn_save"
        app:layout_constraintEnd_toEndOf="@+id/lv_iv_photo"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lv_btn_save" />

    <Button
        android:id="@+id/lv_btn_save"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_iv_photo"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="@+id/lv_iv_photo"
        app:layout_constraintTop_toBottomOf="@+id/lv_iv_photo" />

    <TextView
        android:id="@+id/lv_tv_username"
        android:layout_width="294dp"
        android:layout_height="41dp"
        android:fontFamily="@font/arizonia"
        android:textAlignment="center"
        android:textColor="@color/colorMain"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_iv_photo"
        app:layout_constraintEnd_toEndOf="@+id/lv_iv_photo"
        app:layout_constraintStart_toStartOf="@+id/lv_iv_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/lv_et_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Code"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/lv_iv_photo"
        app:layout_constraintEnd_toEndOf="@+id/lv_iv_photo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_iv_photo"
        app:layout_constraintTop_toBottomOf="@+id/lv_tv_username"
        tools:visibility="gone" />

    <Button
        android:id="@+id/lv-btn_code"
        android:layout_width="172dp"
        android:layout_height="39dp"
        android:text="Enter Code"
        app:layout_constraintBottom_toBottomOf="@+id/lv_et_code"
        app:layout_constraintEnd_toEndOf="@+id/lv_iv_photo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lv_iv_photo"
        app:layout_constraintTop_toTopOf="@+id/lv_et_code"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>